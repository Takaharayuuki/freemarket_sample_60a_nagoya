= render 'layouts/main_header'
.m-card-information-container
  = render 'user/mypage_sidebar'
  .m-card-information-container__chapter
    .m-card-information-container__chapter__head
      クレジットカード情報入力
    .m-card-information-container__chapter__inner
      .m-card-information-container__chapter__inner__content
        = form_with url: "#", class: "card-information-form" do |f|
          .m-card-information-container__chapter__inner__content__number-group
            = f.label :card_number, "カード番号"
            %span 必須
            = f.text_field :card_number, class: "form-group", placeholder: "半角数字のみ"
            .m-card-information-container__chapter__inner__content__number-group__icons
            %ul
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/visa.svg?3466462615', height: '20px', width: '49px'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3466462615', height: '20px', width: '34px'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?3466462615', height: '20px', width: '30px'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?3466462615', height: '20px', width: '32px'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?3466462615', height: '20px', width: '21px'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?3466462615', height: '20px', width: '32px'
              %li
                = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/discover.svg?3466462615', height: '20px', width: '32px'

          .m-card-information-container__chapter__inner__content__expire-group
            = f.label "有効期限"
            %span 必須
            %br
            .m-card-information-container__chapter__inner__content__expire-group__half-wrap
              .m-card-information-container__chapter__inner__content__expire-group__half-wrap--month
                %select#exp_month.select-default
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span 月
            .m-card-information-container__chapter__inner__content__expire-group__half-wrap
              .m-card-information-container__chapter__inner__content__expire-group__half-wrap--year
                %select#exp_year.select-default
                  %option{value: "2019"}19
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span 年

         




          .m-card-information-container__chapter__inner__content__code-group
            = f.label :security_code, "セキュリティコード"
            %span 必須
            = f.text_field :security_code, class: "form-group", placeholder: "カード背面4桁もしくは3桁の番号"







= form_with url: "#" do |f|
  = f.text_field :search
= render 'exhibit_btn'
= render 'main_aside'
= render 'layouts/main_footer'