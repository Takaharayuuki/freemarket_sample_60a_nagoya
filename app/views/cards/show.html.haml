= render 'layouts/main_header'
.y-bread
  %span
    - breadcrumb :credit
    = render "user/bread"
%main.m-payment-container
  .m-payment-container__side
    = render 'user/mypage_sidebar'
  %section.m-payment-container__content
    .m-payment-container__content__head
      %h2 支払い方法
    .m-payment-container__content__inner
      .m-payment-container__content__inner__chapter
        クレジットカード一覧

      .m-payment-container__content__inner__card
        .m-payment-container__content__inner__card__box
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3466462615', height: '20px', width: '34px'
          .m-payment-container__content__inner__card__box__info
            = "************" + @card_information.last4
          .m-payment-container__content__inner__card__box__info
            - exp_month = @card_information.exp_month
            - exp_year = @card_information.exp_year.to_s.slice(2,2)
            - if exp_month < 10
              = "0" + exp_month.to_s + " / " + exp_year
            - else
              = exp_month.to_s + " / " + exp_year
          .m-payment-container__content__inner__card__box__delete
            = link_to "削除する", card_path(current_user.id), method: :delete
      -# .m-payment-container__content__inner__add-card
        -# .m-payment-container__content__inner__add-card__btn
          -# = link_to new_card_path do
          -#   %i.far.fa-credit-card
          -#   クレジットカードを追加する
        
      .m-payment-container__content__inner__about
        = link_to "#" do
          支払い方法について
          %i.fa.fa-chevron-right

= render 'items/exhibit_btn'
= render 'items/main_aside'
= render 'layouts/main_footer'