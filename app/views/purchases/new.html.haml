.m-single-header
  = link_to (image_tag 'https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1248199994', height: '49px', width: '185px'), root_path, class: "img"
.m-purchase-container
  .m-purchase-container__content
    .m-purchase-container__content__head
      購入内容の確認
    .m-purchase-container__content__buy-item
      .m-purchase-container__content__buy-item__inner
        %h3
          = image_tag @item.images.first.image.url , width: '64px'
        %p.m-purchase-container__content__buy-item__inner__item-name
          = @item.name
        %p.m-purchase-container__content__buy-item__inner__item-price
          = "¥#{@item.price.to_s(:delimited)}"
          %span 送料込み
        .m-purchase-container__content__buy-item__inner__point
          ポイントはありません
        .m-purchase-container__content__buy-item__inner__price-table
          .m-purchase-container__content__buy-item__inner__price-table__price-left
            支払い金額
          .m-purchase-container__content__buy-item__inner__price-table__price-right
            = "¥#{@item.price.to_s(:delimited)}"
        .m-purchase-container__content__buy-item__inner__purchase-btn
          = link_to "購入する", purchases_path(item_id: @item), method: :post
    .m-purchase-container__content__buy-user-info
      .m-purchase-container__content__buy-user-info__inner
        %h3 配送先
        .m-purchase-container__content__buy-user-info__address
          = "〒#{@post_num_first}-#{@post_num_last}"
          %br= @address
          = "#{current_user.last_name} #{current_user.first_name}"
        .m-purchase-container__content__buy-user-info__change
          = link_to "#" do
            変更する
            %i.fa.fa-chevron-right
    .m-purchase-container__content__buy-user-info-last
      .m-purchase-container__content__buy-user-info__inner
        %h3 支払い方法
        - if @card
          .m-purchase-container__content__buy-user-info__inner__num
            = "************" + @card_information.last4
          - exp_month = @card_information.exp_month
          - exp_year = @card_information.exp_year.to_s.slice(2, 2)
          - if exp_month < 10
            .m-purchase-container__content__buy-user-info__inner__exp
              = "0" + exp_month.to_s + " / " + exp_year
          - else
            .m-purchase-container__content__buy-user-info__inner__exp
              = exp_month.to_s + " / " + exp_year
          = image_tag 'https://www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?3466462615', height: '20px', width: '34px'
          .m-purchase-container__content__buy-user-info__change
            = link_to "#" do
              変更する
              %i.fa.fa-chevron-right
        - else
          %p
            %br /
          .m-purchase-container__content__buy-user-info__change
            = link_to new_card_path do
              変更する
              %i.fa.fa-chevron-right
