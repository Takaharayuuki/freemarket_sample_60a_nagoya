%body
  .ta-container_signin
    %header.ta-single__header
      %h1.ta-single__header__logo
        = link_to image_tag src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?3761641567",class:"ta-single__header__logo__img"
          




    %main.ta-single__main

      .ta-single__main__signup
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path

      .ta-single__main__login
        %button#facebook-login.ta-single__main__login__facebook
          %i.ta.fab.fa-facebook-square
          = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path,class: "facebook_btn"
        %button#google-login.ta-single__main__login__google
          = image_tag "google.jpg",size: "27x27",class:"ta_google"
          %p.login__font
            Googleでログイン
         

      .ta-single__main__form
        

        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "ta-single__main__form__email"
          .field
            = f.password_field :password, autocomplete: "current-password", class: "ta-single__main__form__password"
          .ta-check
            %p 私はロボットではありません

          .field
            = f.submit "ログイン", class:"ta-single__main__form__submit"
          .field
            = link_to "パスワードをお忘れの方", new_password_path(resource_name),class: "ta-password__get"

      %footer.ta-single__footer
        %nav.ta-single__footer__nav
          %div.ta-single__footer__a
            = link_to "プライバシーポリシー","#",class: "ta-single__footer__c"
            = link_to "メルカリ利用規約","#",class: "ta-single__footer__c"
            = link_to "特定商取引に関する表記","#",class: "ta-single__footer__c"
        = link_to "#" do
          = image_tag "//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3761641567",class: "ta-single__footer__logo"
        %p.ta-single__footer__b 2019 Mercari