%body
  %header.ta-ad-header
    %h1.ta-ad-header__logo
      = link_to image_tag src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2296184308"
      

    .ta-ka-header__progress
      %ul.progress
        %li.through
          会員情報
          .bubble.bubble-first
        %li.through
          電話番号認証
          .bubble
        %li.active
          お届け先住所入力
          .bubble
        %li
          支払い方法
          .bubble
        %li
          完了
          .bubble.bubble-last

%main.ta-ad-main
  %section.ta-ad-main__container
    .ta-ad-main__container__logo
      住所入力
      = form_for @user , url: registrations_path ,method: :post, class: "ta-ad-main__container__form" do |f| 
        .ta-ad-main__container__form__content
          .ta-ad-main__container__form__content__group
            = f.fields_for :address, @user.address  do |a|
              %label  
                郵便番号
              %span
                必須
                = a.text_field :post_address, placeholder: "例) 123-4567"
            .ta-ad-main__container__form__content__group
            = f.fields_for :address, @user.address  do |a|
              %label  
                都道府県
                %span
                必須
              = a.text_field :prefecture
            .ta-ad-main__container__form__content__group
            = f.fields_for :address, @user.address  do |a|
              %label  
                市区町村
                %span
                必須
                = a.text_field :city
            .ta-ad-main__container__form__content__group
            = f.fields_for :address, @user.address  do |a|
              %label  
                番地
                %span
                必須
                = a.text_field :house_number,placeholder: "例）青山1-1-1"
            .ta-ad-main__container__form__content__group__grey
            = f.fields_for :address, @user.address  do |a|
              %label  
                建物名
                %span
                任意
                = a.text_field :building_name, placeholder: "例）柳ビル103"
            .ta-ad-main__container__form__content__group__grey
            = f.fields_for :address, @user.address  do |a|
              %label  
                電話
                %span
                任意
                = a.text_field :tel, placeholder: "例）09012345678"

          = f.submit '次へ進む',class: "ta-ad-main__container__form__content__btnred"
          
          
  %footer.ta-ad__footer
    %nav.ta-ad__footer__nav
      %div.ta-ad__footer__a
        = link_to "プライバシーポリシー","#",class: "ta-single__footer__c"
        = link_to "メルカリ利用規約","#",class: "ta-single__footer__c"
        = link_to "特定商取引に関する表記","#",class: "ta-single__footer__c"
    = link_to "#" do
      = image_tag src="//www-mercari-jp.akamaized.net/assets/img/common/common/logo-gray.svg?3761641567",class: "ta-ad__footer__logo"
    %p.ta-ad__footer__b 2019 Mercari
 