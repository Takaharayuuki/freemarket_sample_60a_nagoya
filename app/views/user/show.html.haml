.y-default-container
  = render "layouts/main_header"
  = render "bread"

  %main.y-container
    .y-content
      %section.y-mypage-user
        = link_to "#" do
          %figure
            = image_tag "https://static.mercdn.net/images/member_photo_noimage_thumb.png", width: "60", height: "60"
          %h2.y-bold 山本修二
          .y-mypage-user__number
            %p.y-left-string 評価
            %span.y-bold 0
            %p.y-right-string 出品数
            %span.y-bold 0

      %section.y-information
        %ul.y-information__header
          %li.y-information__notification
            =link_to '#' do
              お知らせ
          %li.y-information_todo
            =link_to '#' do
              やることリスト

      .y-mypage-tab-content
        %ul.y-mypage-tab__notification
          %li
            = link_to "#", class: "y-mypage-item__link" do
              %figure
                .y-mypage-item
                  .y-mypage-item__image
                    = image_tag "mercari_profile.png", alt: "mercari", class: "default-image", height: "48px", width: "48px"
              .y-mypage-item__body
                %p.y-mypage-item__text
                  《速報》今なら販売手数料が実質無料！出品が超お得♪
                  %time
                    %i.fal.fa-clock
                    %span 6時間前
              %i.fas.fa-chevron-right

          %li
            = link_to "#", class: "y-mypage-item__link" do
              %figure
                .y-mypage-item
                  .y-mypage-item__image
                    = image_tag "mercari_profile.png", alt: "mercari", class: "default-image", height: "48px", width: "48px"
              .y-mypage-item__body
                %p.y-mypage-item__text
                  《今なら販売手数料実質無料！》詳しくはこちらから♪
                  %time
                    %i.fal.fa-clock
                    %span 6時間前
              %i.fas.fa-chevron-right

          .y-mypage-go-list
            = link_to '#' do
              一覧を見る

      %section.y-mypage-tab-container
        .y-mypage-tab-head 購入した商品
        %ul.y-mypage-tabs
          %li.y-mypage-tabs-left
            =link_to "#" do
              取引中
          %li.y-mypage-tabs-right
            = link_to "#" do
              過去の取引
        .y-tab-content
          %ul.y-mypage-item-list
            %li.y-mypage-item-list__not-found 取引中の商品がありません

    = render "mypage_sidebar"
  = render "items/main_aside"
  = render "layouts/main_footer"
  = render "items/exhibit_btn"