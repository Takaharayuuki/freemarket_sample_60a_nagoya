= render "layouts/main_header"
.y-bread
  %span
    - breadcrumb :person_registration
    = render "bread"

.y-identification-container
  .y-identification-container__content
    .y-identification-container__chapter-container
      .y-identification-container__head 本人情報の登録
      %form.y-single-inner{ action: "#", method: "post" }
        %div
          %p お客さまの本人情報をご登録ください。<br>登録されたお名前・生年月日を変更する場合、本人確認書類が必要になります。
          %p.y-text-right
            = link_to "#", target: "_blank" do
              本人確認書類のアップロードについて
              %i.fas.fa-chevron-right
        .y-identification-form
          %label お名前
          %p #{current_user.last_name} #{current_user.first_name}
        .y-identification-form
          %label お名前カナ
          %p #{current_user.last_name_kana} #{current_user.first_name_kana}
        .y-identification-form
          %label{ for:"birthday" } 生年月日
          %p #{current_user.birth_year}/#{current_user.birth_month}/#{current_user.birth_day}
        .y-identification-form
          %label{ for:"post_address" } 郵便番号
          %span.y-form-arbitrary 任意
          %input.y-input-default{type: "text", value: "", name:"post_address", placeholder:"例）0987654"}
        .y-identification-form
          %label{ for:"prefecture" } 都道府県
          %span.y-form-arbitrary 任意
          .y-select-wrap
            %i.fas.fa-chevron-down
            = select_tag 'prefecture', options_from_collection_for_select(@prefecture, :name, :name), { class: "y-select-default"}

        .y-identification-form
          %label{for: "city"} 市町村
          %span.y-form-arbitrary 任意
          %input.y-input-default{type: "text", value: "", name: "city", placeholder: "例）横浜市緑区"}
        .y-identification-form
          %label{for: "house_number"} 番地
          %span.y-form-arbitrary 任意
          %input.y-input-default{type: "text", value: "", name: "house_number", placeholder: "例）青山1-1-1"}
        .y-identification-form
          %label{for: "building_name"} 建物名
          %span.y-form-arbitrary 任意
          %input.y-input-default{type: "text", value: "", name: "building_name", placeholder: "例）柳ビル103"}
        %button.y-btn-default.y-btn-red 登録する
        .y-identification-form.y-text-right
          %p
            =link_to "#", target: "_blank" do
              本人情報の登録について
              %i.fas.fa-chevron-right

  = render "mypage_sidebar"
= render "items/main_aside"
= render "layouts/main_footer"
= render "items/exhibit_btn"
